{
  "Version": "2012-10-17",
  "Statement": [{
      "Sid": "AssumeRole",
      "Effect": "Allow",
      "Action": "sts:AssumeRole",
      "Resource": "${runtime_role}"
    },
    {
      "Sid": "ec2InstanceRole",
      "Effect": "Allow",
      "Action": [
        "ec2:Describe*"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Sid": "allowLoggingToCloudWatch",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents",
        "logs:DescribeLogStreams"
      ],
      "Resource": [
        "arn:aws:logs:*:*:*"
      ]
    },
    {
      "Sid": "ListAllBuckets",
      "Effect": "Allow",
      "Action": [
        "s3:ListAllMyBuckets"
      ],
      "Resource": [
        "arn:aws:s3:::*"
      ]
    },
    {
      "Sid": "allowAccessToS3Buckets",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::${s3-config-bucket}",
        "arn:aws:s3:::${s3-config-bucket}/*",
        "arn:aws:s3:::${delius-deps-bucket}",
        "arn:aws:s3:::${delius-deps-bucket}/*"
      ]
    },
    {
      "Sid": "allowAccessToOracleDBBackupBucket",
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "${s3_oracledb_backups_arn}",
        "${s3_oracledb_backups_arn}/*"
      ]
    },
    {
      "Effect": "Allow",
      "Sid": "allowSSMReadOnly",
      "Action": [
        "ssm:Describe*",
        "ssm:Get*",
        "ssm:List*"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Sid": "allowSSMUpdate",
      "Action": [
        "ssm:PutParameter"
      ],
      "Resource": "*"
    },
    {
      "Sid": "allowRoute53Update",
      "Effect": "Allow",
      "Action": [
        "route53:GetHostedZone",
        "route53:ListHostedZones",
        "route53:ChangeResourceRecordSets",
        "route53:ListResourceRecordSets",
        "route53:ListHostedZonesByName"
      ],
      "Resource": "*"
    },
    {
      "Sid": "allowAccessToSSMAnsibleBucket",
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "${s3_ssm_ansible_arn}",
        "${s3_ssm_ansible_arn}/*"
      ]
    }
  ]
}
